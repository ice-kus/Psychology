@using Psychology.ViewModels
@model AuthorizationModel

@{
    Layout = "_Authorization";
}

<h2>Вход на сайт (@Model.TypeUser)</h2>

<form asp-action="Login" asp-controller="Authorization" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Login">Введите Login</label>
            <input type="text" asp-for="Login" />
            <span asp-validation-for="Login" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="actions">
            <input style="margin-top: 20px" type="submit" value="Войти">
        </div>
        <input type="hidden" asp-for="TypeUser" value="@Model.TypeUser">
    </div>
</form>